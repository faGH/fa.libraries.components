@typeparam TProgramType
@inherits BaseComponent<FrostAuraApplication<TProgramType>>

<!-- Bootstrap the core ForstAura application. All non-visual elements. -->
<InjectEmbeddedContent ContentName="FrostAuraApplication.razor.css" HtmlWrapper="style" />
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(TProgramType).Assembly">
        <!-- Serve all routes as auth-enabled pages. -->
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData"
                                DefaultLayout="@typeof(NavigationLayout)" />
        </Found>
        <!-- By default redirect back to the home page when attempting to access a non-existing route. -->
        <NotFound>
            <LayoutView Layout="@typeof(NavigationLayout)">
                <NavigateTo Path="/" />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>